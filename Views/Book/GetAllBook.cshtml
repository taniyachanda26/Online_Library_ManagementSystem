@model IEnumerable<Online_Library_Management_System.Models.Book>
@{
    ViewData["Title"] = "Get All Books";
}
@section Scripts{
    <script>
    function myfunction()
    {
        var type=document.getElementById("type").value;
        var data=document.getElementById("form1").value;
        if(type=="title")
        {
            window.location="https://localhost:7025/book/searchbookbyname?name="+data;
        }
        else if(type=="author")
        {
             window.location="https://localhost:7025/book/searchbookbyauthor?name="+data;
        }
        else if(type=="id")
        {
            var d=parseInt(data);
            window.location="https://localhost:7025/book/getbookbyid/"+d;
        }
        else{
            document.getElementById("noelement").innerHTML="No Element found";
        }
    }
    </script>
}
<div class="container" style="margin:10%">
    <div class="row">
<div class="input-group">
    <select name="searchtype" id="type" class="btn btn-outline-secondary">
    <option value=""></option>
    <option value="author">Author</option>
    <option value="title">Title</option>
    <option value="id">Id</option>
  </select>
  <div class="form-outline">
    <input type="search" id="form1" class="form-control" placeholder="search"/>
  </div>
  <button type="button" class="btn btn-primary" onclick="myfunction()">
    <i class="fas fa-search"></i>Search
  </button>
</div>

    </div>
</div>
<div class="container">
   <div class="h2 text-danger text-center" id="noelement"><i></i></div>
</div>
<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">

@foreach(Book b in Model)
{        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
               <img src="@b.ImagePath" class="bd-placeholder-img card-img-top" width="100%" hight="225" alt="book_image"></img>
                <div class="card-body">
                    <h3 class="card-title">@b.Title</h3>
                <p class="card-text">This sSection for description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="#" class="btn btn-sm btn-outline-secondary">View Details</a>
                    </div>
                    <small class="text-muted">@b.Author</small>
                </div>
                </div>

            </div>
        </div>
    }
 </div>
</div>
